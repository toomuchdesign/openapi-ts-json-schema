{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "noErrorTruncation": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "erasableSyntaxOnly": true,
    "skipLibCheck": true
  },
  "exclude": ["./dist"]
}
